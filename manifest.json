{
  "manifest_version": 3,

  "name": "Rainbow Tabs",
  "description": "Helpfully sorts your tabs by favicon color.",
  "version": "2.0",

  "permissions": ["tabs", "offscreen"],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_icon": "Rainbow-Tabs-16.png",
    "default_title": "Click to sort tabs by color"
  },

  "icons": {
    "16": "Rainbow-Tabs-16.png",
    "48": "Rainbow-Tabs-48.png",
    "128": "Rainbow-Tabs-128.png"
  },

  "background": {
    "service_worker": "background.js"
  }
}
